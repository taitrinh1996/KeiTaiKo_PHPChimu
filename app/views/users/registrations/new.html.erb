<% provide :title, t(".sign_up") %>
<br><br><br>
<div class="register-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-md-4 cnt-bg-photo d-none d-xl-block d-lg-block d-md-block" style="background-image: url(<%= asset_path 'sign_up_banner.jpg' %>)" >
      </div>
      <div class="col-lg-8 col-md-8 col-sm-12 align-self-center">
        <div class="content-form-box register-box">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="login-header">
              <h4><%= raw t(".create_your_account") %></h4>
            </div>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
            </div>
            <div class="form-group">
              <%= f.label :name %><br />
              <%= f.text_field :name, class: "form-control", placeholder: "Full Name" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
            </div>
            <div class="form-group">
              <%= f.submit t(".sign_up"), class:"btn btn-lg btn-round btn-theme" %>
            </div>
            <div class="login-footer text-center">
              <p>Already have an account? <%= link_to t(".sign_in"), new_user_session_path %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
